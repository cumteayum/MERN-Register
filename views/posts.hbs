<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>All blog Posts</title>
	
</head>
<body>
	 {{#each posts}}

    <div class="container">
        <div class="card">
            <div class="content">
                <!-- <h2>{{this.index}}</h2> -->
                <h3>{{this.title}}</h3>
                <p>{{this.content}}</p>
                <a href="/posts/{{this.slug}}">Read More</a>     
            </div>
        </div>
    </div> 

    {{/each}}

</body>
<style type="text/css" media="screen">
	body{
		margin: 0;
		padding: 0;
	}
	.container{
		display: flex;
		flex-direction: column; 
	}
	.card{
		height:300px;
		width:400px;
		box-sizing: border-box;
		box-shadow: rgb(0,0,0);
		background: lightgray;
		margin: 10px 10px 10px 10px;
		padding: 10px 10px 10px 10px;
	}
</style>
</html>