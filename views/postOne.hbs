<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>All blog Posts</title>
	
</head>
<body>
	 {{#each posts}}

    <div class="container">
        <div class="card">
            <div class="content">
                <!-- <h2>{{this.index}}</h2> -->
                <h3>{{this.title}}</h3>
                <p>{{this.content}}</p>
          
            </div>
        </div>
    </div> 

    {{/each}}

</body>
<style type="text/css" media="screen">
	body{
		margin: 0;
		padding: 0;
	}
	
	h3{
		text-transform: uppercase;
		text-align: center;
		display: flex;
		margin:auto;
	}
</style>
</html>